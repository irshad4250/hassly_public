<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>hassly</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Baloo+2&family=Questrial&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../public/assets/styles/styles.css" />
  </head>
  <body>
    <%- include('./partials/navbar.ejs')%>

    <div class="latestBlock" id="latest">
      <div class="latestLabel">Latest Items</div>
      <div class="showings">
        <% for( let i = 0; i < latest.length; i++ ) { %>
        <div class="itemBox">
          <a href="view/<%= latest[i]._id %> ">
            <div class="itemBoxFlex">
              <div
                class="itemBoxPicture"
                style="background-image: url('<%=latest[i].imageUrl%>')"
              ></div>
              <div class="itemBoxTitle"><%= latest[i].title %></div>
              <div class="itemBoxPrice">$<%= latest[i].price %></div>
            </div>
          </a>
        </div>
        <% } %>
      </div>
    </div>

